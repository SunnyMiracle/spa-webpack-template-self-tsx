{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "esnext", // https://basarat.gitbook.io/typescript/project/dynamic-import-expressions
    "target": "es5",
    "lib": ["dom", "es5", "scripthost", "es2015.promise"],
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "baseUrl": "./src",
    "jsx": "react"
  },
  "path": {
    "common/*": ["./src/common/*"],
    "page/*": ["./src/page/*"]
  },
  "include": [
    "./common.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/*.json",
    "**/*.jsx"
  ]
}
